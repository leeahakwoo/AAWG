{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RequirementDefinition",
  "type": "object",
  "properties": {
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "요구사항 고유 식별자, 예: REQ-001"
          },
          "title": {
            "type": "string",
            "description": "요구사항 제목"
          },
          "description": {
            "type": "string",
            "description": "상세 설명"
          },
          "priority": {
            "type": "string",
            "enum": ["High", "Medium", "Low"],
            "description": "우선순위"
          }
        },
        "required": ["id", "title", "description"]
      }
    }
  },
  "required": ["requirements"]
}
